<%- include("header") -%>


        <div class="box" id="heading">
            <h1>
                <%=listTitle %>
            </h1>
        </div>
        <div class="box">
            <%for(var i=0;i<task.length;i++){%>
                <div class="item">
                    <input type="checkbox">
                    <p>
                        <%= task[i] %>
                    </p>
                </div>
                <% } %>
                    <form action="/" method="post" class="item">
                        <input type="text" name="task" id="" placeholder="Add new task" autofocus autocomplete="off">
                        <button type="submit" name="list" value=<%=listTitle %> >+</button>
                    </form>
        </div>
        <%- include("footer") -%>